<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schedule_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:nextFocusRight="@id/inflate_item_watch"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/inflate_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="null"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/inflate_item_episode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="null"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text" />

            <TextView
                android:id="@+id/inflate_item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="null"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/inflate_item_watch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:contentDescription="is watched"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="10dp"
        android:nextFocusLeft="@id/schedule_item_main"
        android:src="@drawable/ic_baseline_remove_red_eye_24"
        android:visibility="visible" />

    <TextView
        android:id="@+id/inflate_item_next_episode"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:padding="10dp"
        android:text="null"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text"
        android:visibility="visible" />

</LinearLayout>


