<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="15dp"
    android:paddingTop="7dp"
    android:paddingEnd="15dp"
    android:paddingBottom="7dp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inflate_series_updates_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Title"
            android:textColor="@color/text_color"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/inflate_series_updates_item_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(5 сезон)"
            android:textColor="@color/text_color"
            android:textSize="@dimen/normal_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inflate_series_updates_item_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="3"
            android:text="Title"
            android:textColor="@color/text_color"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/inflate_series_updates_item_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="(5 сезон)"
            android:textColor="@color/text_color"
            android:textSize="@dimen/normal_text" />
    </LinearLayout>
</LinearLayout>